{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "height": 400,
  "width": 600,
  "background": "#FFF9F9",
  "data": {
    "url": "https://raw.githubusercontent.com/dvek0001/FIT3179/main/data/flights_heat.csv"
  },
  "encoding": {
    "x": {
      "field": "CANCELLATION_REASON",
      "type": "nominal",
      "axis": {
        "labelAngle": 0, 
        "labelFontSize": 12, 
        "title": "Cancellation Reason",
        "ticks": false
      }
    },
    "y": {
      "field": "AIRLINE",
      "type": "nominal",
      "axis": {
        "ticks": false,
        "labelFontSize": 12
      }
    }
  },
  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": {
          "field": "PERCENTAGE_CANCELLED",
          "type": "quantitative",
          "scale": {
            "scheme": "goldred"
          },
          "title": "% Cancelled"
        }
      }
    },
    {
      "mark": "text",
      "encoding": {
        "text": {
          "field": "PERCENTAGE_CANCELLED",
          "type": "quantitative",
          "format": ".3f"
        },
        "size": {"value": 18}
      }
    }
  ]
}
